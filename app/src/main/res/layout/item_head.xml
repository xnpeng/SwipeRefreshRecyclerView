<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sweet_image1"
            android:layout_width="@dimen/sweet_image_width"
            android:layout_height="@dimen/sweet_image_height"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sweet_image2"
            android:layout_width="@dimen/sweet_image_width"
            android:layout_height="@dimen/sweet_image_height"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sweet_image3"
            android:layout_width="@dimen/sweet_image_width"
            android:layout_height="@dimen/sweet_image_height"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sweet_image4"
            android:layout_width="@dimen/sweet_image_width"
            android:layout_height="@dimen/sweet_image_height"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sweet_image5"
            android:layout_width="@dimen/sweet_image_width"
            android:layout_height="@dimen/sweet_image_height"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sweet_image6"
            android:layout_width="@dimen/sweet_image_width"
            android:layout_height="@dimen/sweet_image_height"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sweet_image7"
            android:layout_width="@dimen/sweet_image_width"
            android:layout_height="@dimen/sweet_image_height"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sweet_image8"
            android:layout_width="@dimen/sweet_image_width"
            android:layout_height="@dimen/sweet_image_height"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sweet_image9"
            android:layout_width="@dimen/sweet_image_width"
            android:layout_height="@dimen/sweet_image_height"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
